<!-- HALAMAN UNTUK USER MELIHAT BUKU (HOME PAGE USER DIALIHKAN DI ROUTE BERBEDA TETAPI TAMPILAN TETAP SAMA DENGAN ADMIN / HANYA HOME DAN LOGOUT) -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/dataBukuUser.css">
  <title>User - Daftar Buku</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <header class="header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="logo">MANGooS</div>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav-links">
              <li class="nav-item active">
                <a class="nav-link" href="/userHomepage">Home</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/userDataBuku">Data Buku</a>
              </li>
            </ul>
        </div>
    </nav>
  
    <form class="d-flex" action="/logout" method="POST">
        <button class="btn btn-outline-danger logout" type="submit">Logout</button>
    </form>
  </header>


<div class="container my-5">
  <h1 class="mb-4">Daftar Buku</h1>
  <div class="row g-4">
    <% books.forEach(book => { %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= book.judul_buku %></h5>
          <p class="card-text">
            <strong>Kode Buku:</strong> <%= book.kode_buku %><br>
            <strong>Pengarang:</strong> <%= book.pengarang %><br>
            <strong>Penerbit:</strong> <%= book.penerbit %>
          </p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

