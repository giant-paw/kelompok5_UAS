            text-align: center;
        }
        .promo img {
            max-width: 100%;
            height: auto;
        }
        .promo h2 {
            font-size: 24px;
            color: #333;
            margin: 10px 0;
        }
        .promo button {
            padding: 10px 20px;
            background-color: #f60;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .trending {
            padding: 20px;
        }
        .trending h2 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }
        .trending .books {
            display: flex;
            overflow-x: auto;
        }
        .trending .book {
            flex: 0 0 auto;
            width: 150px;
            margin-right: 20px;
            text-align: center;
        }
        .trending .book img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
        }
        .trending .book h3 {
            font-size: 16px;
            color: #333;
            margin: 10px 0;
        }
        .trending .book p {
            font-size: 14px;
            color: #666;
        }
        @media (max-width: 768px) {
            .categories {
                flex-direction: column;
            }
            .category {
                margin: 10px 0;
            }
            .trending .books {
                flex-direction: column;
            }
            .trending .book {
                margin: 10px 0;
            }
        }
