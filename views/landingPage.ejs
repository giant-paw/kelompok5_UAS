        }
        .categories {
            display: flex;
            justify-content: space-around;
            padding: 20px;
        }
        .category {
            text-align: center;
            padding: 20px;
            background-color: #f8f8f8;
            border-radius: 4px;
            flex: 1;
            margin: 0 10px;
        }
        .category img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
        }
        .category h2 {
            font-size: 24px;
